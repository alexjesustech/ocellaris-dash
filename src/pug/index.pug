	body.landing-page
		include includes/_landing-icons.pug
		section.landing-hero
			.landing-hero-overlay
			.landing-hero-content
				h1.landing-hero-title Ocellaris Dash - Template administrativo gratuito
				p.landing-hero-description Construído com Bootstrap 5, Sass e PugJS

				div
					a.btn.btn-primary.me-4(href='dashboard.html') Visualizar
					a.btn.btn-primary(href='https://github.com/alexjesustech/ocellaris-dash' target='_blank' rel='noopener') GitHub

				img.landing-hero-banner(src='images/banner.png')

		section.features
			h1.features-title Características

			.features-cards
				.features-card
					.feature-icon-backdrop
						svg.feature-icon: use(xlink:href='#icon-globe')
					p.feature-description Gratuito para usar e de código aberto
				.features-card
					.feature-icon-backdrop
						svg.feature-icon: use(xlink:href='#icon-smartphone')
					p.feature-description Bonito e responsivo para dispositivos móveis
				.features-card
					.feature-icon-backdrop
						svg.feature-icon: use(xlink:href='#icon-zap')
					p.feature-description Construído com Bootstrap 5, Sass e PugJS
				.features-card
					.feature-icon-backdrop
						svg.feature-icon: use(xlink:href='#icon-chart')
					p.feature-description Chart.js integration to display responsive charts
				.features-card
					.feature-icon-backdrop
						svg.feature-icon: use(xlink:href='#icon-layout')
					p.feature-description Sete páginas pré-construídas, incluindo login, perfil de usuário e página de fatura para impressão
				.features-card
					.feature-icon-backdrop
						svg.feature-icon: use(xlink:href='#icon-grid')
					p.feature-description Tabelas de dados com funções de ordenação, pesquisa e paginação

		footer.landing-footer Construído com Bootstrap 5, Sass e PugJS. Mantido por
			a(href='https://github.com/alexjesustech', target='_blank')  Alex Jesus
